{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true
    },
    "files": [
        "index.ts",
        "httpEndpoint.ts",
        "function.ts",
        "logCollector.ts",
        "sns.ts",
        "table.ts",
        "timer.ts",
        "topic.ts",
        "service.ts",
        "unhandledError.ts",
        "utils.ts",

        "config/index.ts",

        "infrastructure/aws.ts",
        "infrastructure/network.ts",
        "infrastructure/cluster.ts"
    ]
}

